#include <bits/stdc++.h>
using namespace std;

{
    while (start < end)
    {
        int temp = arr[start];
        arr[start] = arr[end];
        arr[end] = temp;
        start++;
        end--;
    }
}    
void printArray(int arr[], int size)
{
   for (int i = 0; i < size; i++)
   cout << arr[i] << " ";
 
   cout << endl;
}
int main()
{
    int arr[] = {0, 1, 2, 3, 4, 5};
     
    int n = sizeof(arr) / sizeof(arr[0]);
    printArray(arr, n);
    rvereseArray(arr, 0, n-1);  
    cout << "Reversed array is" << endl;
    printArray(arr, n);
    return 0;
}
